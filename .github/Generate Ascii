name: Generate AScii

on: push

jobs:
  first_job:
    runs-on: ubuntu-latest
    steps:
      - name: checkout repo
        uses: actions/checkout@v4

      - name: listing files and modify
        run: |
          echo "all my messages"
          ls -al
          cat README.md

      - name: Install cowsay
        run: sudo apt-get install cowsay -y    
        
      - name: geneate ASCII
        run: cowsay -f dragaon "run over...i am the dragon" >> dragon.txt

      - name: viewing ascill
        run: |
        ls -lat
        cat dragon.txt  
       